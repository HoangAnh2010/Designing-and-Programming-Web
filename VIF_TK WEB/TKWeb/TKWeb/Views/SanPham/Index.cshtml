@model IEnumerable<TKWeb.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}  
    
<div id="home-slider">
    <div class="container" >
        <div class="row">
            <div class="col-sm-12 header-top-right">
                <div class="homeslider">
                    <ul id="contenhomeslider" style="height: 300px !important">
                        <li ><img alt="Cosmetic" src="~/Content/images/slide/slide5.jpg" title="Cosmetic" /></li>
                        <li ><img  alt="Cosmetic" src="~/Content/images/slide/slide6.jpg" title="Cosmetic" /></li>
                        <li ><img  alt="Cosmetic" src="~/Content/images/slide/slide4.png" title="Cosmetic" /></li>
                        <li ><img  alt="Cosmetic" src="~/Content/images/slide/slide3.jpg" title="Cosmetic" /></li>
                        <li ><img  alt="Cosmetic" src="~/Content/images/slide/slide2.jpg" title="Cosmetic" /></li>
                        <li ><img  alt="Cosmetic" src="~/Content/images/slide/slide1.jpg" title="Cosmetic" /></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- featured category  -->
<div class="demo_changer" id="demo_changer">
    <div class="demo-icon fa fa-shopping-cart">
        <span class="notify notify-left" id="count-cart">0</span>
    </div>
    <div class="form_holder">
        <div class="cart-block">
            <div class="cart-block-content">
                <div class="cart-block-list">
                    <div class="shop_cart">
                        <table class="shop_table">
                            <tbody id="show-cart">

                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="toal-cart">
                    <span>Tổng tiền</span>
                    <span class="toal-price pull-right" id="total_price">54,000đ</span>
                </div>
                <div class="cart-buttons">
                    <a href="/GioHang/ShoppingCart" class="btn-check-out">Thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</div>

@*<div class="content-page">*@
    <div class="container">
        <div class="category-featured Vegetables">
            <nav class="navbar nav-menu show-brand">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-brand"><a href="#"> <img alt="fashion" src="~/Content/images/icon_like.png" /> Tất cả sản phẩm</a></div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">

                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->

            </nav>
            <div class="product-featured clearfix">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="box-right">
                            <!--&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->
                            <ul class="product-list">
                                @foreach (var item in Model)
                                {
                                    <li class="col-sm-4 product-item">
                                        <div class="left-block">
                                            <a href="/SanPham/ProDetail/@item.MaSP">
                                                <img class="img-responsive" alt="product"
                                                     src="~/Content/images/product-detail/@item.Anh" />
                                            </a>

                                            <div class="quick-view">
                                                <a title="Yêu thích" class="heart" href="#"></a>
                                                <a title="So sánh" class="compare" href="#"></a>
                                                <a title="Xem chi tiết" href="images/product-detail/vegetables/spinach_600x600.jpg" class="search fancybox-button"></a>
                                            </div>
                                            <div class="add-to-cart">
                                                <a class="add-item-to-cart" title="Add to Cart" href="javascript:void(0)" data-name="Spinach - 1kg"
                                                   data-price="55000" data-image="vegetables/spinach_300x300.jpg" data-product-code="SP109" onclick="muahang('@item.MaSP')">Thêm vào giỏ hàng</a>
                                            </div>
                                        </div>
                                        <div class="right-block">
                                            <h5 class="product-name"><a href="/SanPham/ProDetail/@item.MaSP">@item.TenSP</a></h5>

                                            <div class="content_price">
                                                <span class="price product-price"><span style="color: black">Đơn giá:</span> @string.Format("{0:#,##0}", item.DonGia) VND</span>
                                            </div>
                                        </div>
                                    </li>
                                }

                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@*</div>*@
